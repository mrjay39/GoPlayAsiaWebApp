@using GoplayasiaBlazor.Models.Constants
@using GoPlayAsiaWebApp.ViewModels
@using GoPlayAsiaWebApp.Games.Shared
@inject Lucky9ViewModel luckyViewModel;

@if (BetValueDisplay == Settings.Constants.Player)
{
    <!-- PLAYER RED -->
    <button style="border-radius: 44%; height: 44px;" class="col btn p-0 borderGold tieRelative @(Settings.Constants.ColorRedPlayer == WinnerResults ? "winReds2Player" : TwoRedPlayer)" @onclick=OnClickCallback disabled="@isDisabled">
        <p class="font-weight-bold smallHeader mb-1" style="font-size:10px; margin-top: 2px;">
            <span style="font-size:15px">2</span>
            <span>REDS</span>
        </p>
        @* <p class="font-weight-bold smallHeader mb-1 mt-0" style="line-height: normal; font-size: 13px;">REDS</p> *@
        <div class="d-flex">
            @if (luckyViewModel.L9Color != null)
            {
                <p style="font-size: 13px !important;" class="payout font-weight-bold col p-0 d-flex justify-content-center mb-0 @(UserTotalBet_ColorRedPlayer != "0" ? "withBet" : "") ">
                    @(UserTotalBet_ColorRedPlayer != "0" ? SampleWinColorRedPlayer : "x" + luckyViewModel.L9Color.FixedPriceMultiplier.ToString("G29"))
                </p>
            }
        </div>

        <!-- TOKEN DISPLAY -->
        <TokenDisplay Amount="@UserTotalBet_ColorRedPlayer" />
        @if (luckyViewModel.Token_Animation != "" && luckyViewModel.CurrentGameType == (int) Settings.L9SubBetTypes.TwoRedPlayer)
        {
            <div class="additionaltokencontainer" style="--animation: @luckyViewModel.Token_Animation">
                <img src="/img/selectedToken.png" class="tokenSelectedBet" />
                <p class="selectedAmountToken">@luckyViewModel.BetAmount</p>
            </div>
        }
    </button>
}
else if (BetValueDisplay == Settings.Constants.Banker)
{
    <!-- BANKER RED -->
    <button style="border-radius: 44%; height: 44px;" class="col btn p-0 borderGold tieRelative @(Settings.Constants.ColorRedBanker == WinnerResults ? "winReds2Banker" : TwoRedBanker)" @onclick=OnClickCallback disabled="@isDisabled">
        <p class="font-weight-bold smallHeader mb-1" style="font-size:10px; margin-top: 2px;">
            <span style="font-size:15px">2</span>
            <span>REDS</span>
        </p>
        @* <p class="font-weight-bold smallHeader mb-1 mt-0" style="line-height: normal; font-size: 13px;">REDS</p> *@
        <div class="d-flex">
            @if (luckyViewModel.L9Color != null)
            {
                <p style="font-size: 13px !important;" class="payout font-weight-bold col p-0 d-flex justify-content-center mb-0 @(UserTotalBet_ColorRedBanker != "0" ? "withBet" : "") ">
                    @(UserTotalBet_ColorRedBanker != "0" ? SampleWinColorRedBanker : "x" + luckyViewModel.L9Color.FixedPriceMultiplier.ToString("G29"))
                </p>
            }
        </div>

        <!-- TOKEN DISPLAY -->
        <TokenDisplay Amount="@UserTotalBet_ColorRedBanker" />
        @if (luckyViewModel.Token_Animation != "" && luckyViewModel.CurrentGameType == (int)Settings.L9SubBetTypes.TwoRedBanker)
        {
            <div class="additionaltokencontainerBanker" style="--animation: @luckyViewModel.Token_Animation">
                <img src="/img/selectedToken.png" class="tokenSelectedBet" />
                <p class="selectedAmountToken">@luckyViewModel.BetAmount</p>
            </div>
        }
    </button>
}

