                <FishingTile _imgStr="./img/fishing/SecretTreasure.png"
                             _titleStr="Secret Treasure" />

                <FishingTile _imgStr="./img/fishing/DragonTreasure.png"
                             _titleStr="Dragon Treasure" />

                <FishingTile _imgStr="./img/fishing/DragonFortune.png"
                             _titleStr="Dragon Fortune" />
            </div>
        </div>
    </div>

    <div class="container">
        <h2 class="text-white fw-bold">Enjoyable and Dynamic games!</h2>
        <h5 class="text-muted">Begin rotating for your chance to win big!</h5>
        <div class="pb-4 gameOverflow-x">
            <div class="row justify-content-center">
                <ArcadeTile _imgStr="./img/Arcade/Mines.png"
                            _titleStr="Mines" />

                <ArcadeTile _imgStr="./img/Arcade/GoRush.png"
                            _titleStr="Go Rush" />

                <ArcadeTile _imgStr="./img/Arcade/Limbo.png"
                            _titleStr="Limbo" />

                <ArcadeTile _imgStr="./img/Arcade/Tower.png"
                            _titleStr="Tower" />

                <ArcadeTile _imgStr="./img/Arcade/CrazyPusher.png"
                            _titleStr="Crazy Pusher" />

            </div>
        </div>
    </div>

</div>
@code {
    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; } = default!;
    private GameInfoModal modal = new GameInfoModal(); // Initialize here

    private void ShowModal(string _idStr)
    {
        modal.ShowModal(_idStr);
    }
}