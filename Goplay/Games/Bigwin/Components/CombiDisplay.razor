            </div>
        </div>
        <div class="traiangel">
            <img src="/img/BW-images/bw5.png" />
        </div>
    </div>
</div>



@code {
    [Parameter] public string RoundStatusString { get; set; }

    [Parameter] public string LetterValue1 { get; set; } = "";

    [Parameter] public string LetterValue2 { get; set; } = "";

    [Parameter] public string LetterValue3 { get; set; } = "";

    [Parameter] public string LetterValue4 { get; set; } = "";

    [Parameter] public string LetterValue5 { get; set; } = "";

    [Parameter] public string PreLetterValue { get; set; } = "";
}