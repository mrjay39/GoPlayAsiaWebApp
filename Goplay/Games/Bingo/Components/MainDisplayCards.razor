@using GoPlayAsiaWebApp.Goplay.Games.Bingo.CardTemplate

<div class="d-flex col p-0">
    <div class="jackpotImage col p-0 mt-2 ">
        <div class="d-flex col p-0 justify-content-center">
            <div class="jackpotImage col p-0">
                <img class=" img-fluid col p-0" height="30px" src="/img/jackpotimage.png" />
                <div class="jackpotHeader text-center fw-bolder ">Jackpot</div>
                <div class="majorText text-center">
                    <div class="grandPrize text-center fw-bolder">@JackpotPrize</div>
                </div>
            </div>

            
           
            <div class="majorImage col p-0">
                <img class=" img-fluid col p-0" height="30px" src="/img/jackpotimage.png" />
                <div class="majorHeader text-center fw-bolder ">Prize Pool</div>
