                    <div class="text-center grandPrize fw-bolder">@MiniJackpot</div>
                </div>
            </div>`
        </div>

    </div>
  

</div>

<div class="displayContainer d-flex justify-content-center" >
    <Card betValue="@BetValue1" />
    <Card betValue="@BetValue2" />
    <Card betValue="@BetValue3" />
    <Card betValue="@BetValue4" />
    <Card betValue="@BetValue5" />
    <Card betValue="@BetValue6" />
