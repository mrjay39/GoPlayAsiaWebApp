                    <Card betValue="d-9"   OnClickCallback="selectCard"  />
                    <Card betValue="d-10"  OnClickCallback="selectCard"   />
                    <Card betValue="d-j"   OnClickCallback="selectCard"  />
                    <Card betValue="d-q"   OnClickCallback="selectCard"  />
                    <Card betValue="d-k"   OnClickCallback="selectCard"  />
            </div>
        </div>
        <!--------------CLUB----------------->
        <div class="">
            <div class="d-flex justify-content-center">
                    <Card betValue="c-a"  OnClickCallback="selectCard"/>
                    <Card betValue="c-2"  OnClickCallback="selectCard"/>
                    <Card betValue="c-3"  OnClickCallback="selectCard"/>
                    <Card betValue="c-4"  OnClickCallback="selectCard"/>
                    <Card betValue="c-5"  OnClickCallback="selectCard"/>
                    <Card betValue="c-6"  OnClickCallback="selectCard"/>
                    <Card betValue="c-7"  OnClickCallback="selectCard"/>
            </div>
            <div class="d-flex justify-content-center">
                    <Card betValue="c-8"    OnClickCallback="selectCard"/>
                    <Card betValue="c-9"    OnClickCallback="selectCard"/>
                    <Card betValue="c-10"   OnClickCallback="selectCard" />
                    <Card betValue="c-j"    OnClickCallback="selectCard"/>
                    <Card betValue="c-q"    OnClickCallback="selectCard"/>
                    <Card betValue="c-k"    OnClickCallback="selectCard"/>
            </div>
        </div>

        <!--------------Heart----------------->
        <div class="">
            <div class="d-flex justify-content-center">
                    <Card betValue="h-a" OnClickCallback="selectCard"/>
                    <Card betValue="h-2" OnClickCallback="selectCard"/>
                    <Card betValue="h-3" OnClickCallback="selectCard"/>
                    <Card betValue="h-4" OnClickCallback="selectCard"/>
                    <Card betValue="h-4" OnClickCallback="selectCard"/>
                    <Card betValue="h-5" OnClickCallback="selectCard"/>
