@using GoPlayAsiaWebApp.Goplay.Games.Bingo.CardTemplate
@using GoPlayAsiaWebApp.Goplay.Games.Bingo.Components
@using GoPlayAsiaWebApp.Goplay.ViewModels;
    using GoPlayAsiaWebApp.Goplay.ViewModels
@inject BingoViewModel _iBingoViewModel
<!--TIMER PROGESS BAR-->
<div class="w-75 m-auto">
    <div class="progress">
        <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @progress" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
</div>

<div class="d-flex" style="max-width: 640px; margin: 0 auto; z-index: 1;">
    <div class="" style="max-width: 640px; margin: 0 auto ;">
        <!-----------Card Selected Display----------->
        <div class="d-flex justify-content-center mb-1" style="border-bottom: 1px solid gold;">
            <div class="individualCard ">
                <Card cardValue="@_cardValue1" suite="@_cardSuite1" />
            </div>
            <div class="individualCard ">
                <Card cardValue="@_cardValue2" suite="@_cardSuite2" />
            </div>
            <div class="individualCard ">
                <Card cardValue="@_cardValue3" suite="@_cardSuite3" />
            </div>
            <div class="individualCard ">
                <Card cardValue="@_cardValue4" suite="@_cardSuite4" />
            </div>
            <div class="individualCard ">
                <Card cardValue="@_cardValue5" suite="@_cardSuite5" />
            </div>
            <div class="individualCard ">
                <Card cardValue="@_cardValue6" suite="@_cardSuite6" />
            </div>
            <div class="individualCard ">
                <Card cardValue="@_cardValue7" suite="@_cardSuite7" />
            </div>
            <div class="individualCard ">
                <Card cardValue="@_cardValue8" suite="@_cardSuite8" />
            </div>
        </div>
        <!--------------diamond----------------->
        <div class="">
            <div class="d-flex justify-content-center">
                <Card betValue="d-a" OnClickCallback="selectCard" />
                    <Card betValue="d-2" OnClickCallback="selectCard" />
                    <Card betValue="d-3" OnClickCallback="selectCard" />
                    <Card betValue="d-4" OnClickCallback="selectCard" />
                    <Card betValue="d-5" OnClickCallback="selectCard" />
                    <Card betValue="d-6" OnClickCallback="selectCard" />
                    <Card betValue="d-7" OnClickCallback="selectCard" />
            </div>
            <div class="d-flex justify-content-center">
