            </div>
            <div class="d-flex justify-content-center">
                    <Card betValue="c-8"   OnClickCallback="selectCard"/>
                    <Card betValue="c-9"   OnClickCallback="selectCard"/>
                    <Card betValue="c-10"  OnClickCallback="selectCard" />
                    <Card betValue="c-j"   OnClickCallback="selectCard"/>
                    <Card betValue="c-q"   OnClickCallback="selectCard"/>
                    <Card betValue="c-k"   OnClickCallback="selectCard"/>
            </div>
        </div>
        <!--------------SPADE----------------->
        <div class="">
            <div class="d-flex justify-content-center">
                    <Card betValue="s-a" OnClickCallback="selectCard"/>
                    <Card betValue="s-2" OnClickCallback="selectCard"/>
                    <Card betValue="s-3" OnClickCallback="selectCard"/>
                    <Card betValue="s-4" OnClickCallback="selectCard"/>
                    <Card betValue="s-5" OnClickCallback="selectCard"/>
                    <Card betValue="s-6" OnClickCallback="selectCard"/>
                    <Card betValue="s-7" OnClickCallback="selectCard"/>
            </div>
            <div class="d-flex justify-content-center">
                    <Card betValue="s-8"   OnClickCallback="selectCard"/>
                    <Card betValue="s-9"   OnClickCallback="selectCard"/>
                    <Card betValue="s-10"  OnClickCallback="selectCard" />
                    <Card betValue="s-j"   OnClickCallback="selectCard"/>
                    <Card betValue="s-q"   OnClickCallback="selectCard"/>
                    <Card betValue="s-k"   OnClickCallback="selectCard"/>
            </div>
        </div>
    </div>
</div>
<div class="relativePos">

    <TokenSelection />

    <button type="button"
            class="backAbsolute btn col-2 btn-secondary mr-3 d-flex align-items-center justify-content-center"
            data-dismiss="modal">
        <img style="height: 13px; width: 13px;" src="/img/back-arrow.png" />
        @*  <i style="font-size: 22px" class="bi bi-arrow-left-circle-fill"></i> *@
    </button>
    <button class=" delAbsolut btn  col-2  ml-3 d-flex align-items-center justify-content-center"
            @onclick='() => setDel()'>
        <i style="font-size: 15px" class="bi bi-trash3-fill"></i>
    </button>

</div>

<div class="pl-2 pr-2 mt-2">

    <div class="d-flex mt-1 ">
        <button class="combo7 btn pl-0 pr-0  col btn-success ml-1 mr-1">Combo 7</button>
        <button class="btn pl-0 betBtn  pr-0  col btn-success ml-1 mr-1">BET - @BetAmount</button>
        <button class="combo8 btn pl-0 pr-0  col btn-success ml-1 mr-1">Combo 8</button>

    </div>
</div>



