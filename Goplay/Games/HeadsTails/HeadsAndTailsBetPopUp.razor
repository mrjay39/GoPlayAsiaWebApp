@using GoPlayAsiaWebApp.Goplay.ViewModels;
    using GoPlayAsiaWebApp.Goplay.ViewModels
@inject HeadsAndTailsViewModel IHeadsAndTailsViewModel;

<div class="maincontainer">
    <div class="maincard container-fluid p-0">
        <div class="innerContainer row ">
            <p class="amo col-4 text-left pl-0">Amount</p>
            <p class="Min col text-right pr-0">Min: @String.Format("{0:#,##0}",@IHeadsAndTailsViewModel.MinBet) - Max: @String.Format("{0:#,##0}",@IHeadsAndTailsViewModel.MaxBet)</p>
            <input class="betAmo form-control font-weight-bolder" type="number" placeholder="@String.Format("{0:#,##0}",@IHeadsAndTailsViewModel.BetAmount)" aria-label="default input example" disabled>
            <!--START TOKEN HERE-->
            <div class="tokenAmount container">
                <div class="tokenContainer">
                    <div class="upperToken row d-flex">
                        <div class="tokenValue col p-1 text-dark">
                            <a href="#" @onclick:preventDefault @onclick="@(()=> IHeadsAndTailsViewModel.SetBetSelectedValue(@IHeadsAndTailsViewModel.GameChips.Chip1))">
                                <p class="Token">@IHeadsAndTailsViewModel.GameChips.Chip1Display</p>
                                <img src="/img/100.png" />
                            </a>
                        </div>
                        <div class="tokenValue col p-1 text-dark">
                            <a href="#" @onclick:preventDefault @onclick="@(()=> IHeadsAndTailsViewModel.SetBetSelectedValue(@IHeadsAndTailsViewModel.GameChips.Chip2))">
                                <p class="Token">@IHeadsAndTailsViewModel.GameChips.Chip2Display</p>
                                <img src="/img/200.png" />
                            </a>
                        </div>
                        <div class="tokenValue col p-1 text-dark">
                            <a href="#" @onclick:preventDefault @onclick="@(()=> IHeadsAndTailsViewModel.SetBetSelectedValue(@IHeadsAndTailsViewModel.GameChips.Chip3))">
                                <p class="Token">@IHeadsAndTailsViewModel.GameChips.Chip3Display</p>
                                <img src="/img/300.png" />
                            </a>
                        </div>
                        <div class="tokenValue col p-1 text-dark">
                            <a href="#" @onclick:preventDefault @onclick="@(()=> IHeadsAndTailsViewModel.SetBetSelectedValue(@IHeadsAndTailsViewModel.GameChips.Chip4))">
                                <p class="Token">@IHeadsAndTailsViewModel.GameChips.Chip4Display</p>
                                <img src="/img/500.png" />
                            </a>
                        </div>
                        <div class="tokenValue col p-1 text-dark">
                            <a href="#" @onclick:preventDefault @onclick="@(()=> IHeadsAndTailsViewModel.SetBetSelectedValue(@IHeadsAndTailsViewModel.GameChips.Chip5))">
                                <p class="Token">@IHeadsAndTailsViewModel.GameChips.Chip5Display</p>
                                <img src="/img/1k.png" />
                            </a>
                        </div>
                    </div>
                    <div class="lowerToken row d-flex">
                        <div class="tokenValue col p-1 text-dark">
                            <a href="#" @onclick:preventDefault @onclick="@(()=> IHeadsAndTailsViewModel.SetBetSelectedValue(@IHeadsAndTailsViewModel.GameChips.Chip6))">
                                <p class="Token">@IHeadsAndTailsViewModel.GameChips.Chip6Display</p>
                                <img src="/img/1-5k.png" />
                            </a>
                        </div>
