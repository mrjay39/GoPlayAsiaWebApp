                                <p class="Token">@IHeadsAndTailsViewModel.GameChips.Chip7Display</p>
                                <img src="/img/2k.png" />
                            </a>
                        </div>
                        <div class="tokenValue col p-1 text-dark">
                            <a href="#" @onclick:preventDefault @onclick="@(()=> IHeadsAndTailsViewModel.SetBetSelectedValue(@IHeadsAndTailsViewModel.GameChips.Chip8))">
                                <p class="Token">@IHeadsAndTailsViewModel.GameChips.Chip8Display</p>
                                <img src="/img/3k.png" />
                            </a>
                        </div>
                        <div class="tokenValue col p-1 text-dark">
                            <a href="#" @onclick:preventDefault @onclick="@(()=> IHeadsAndTailsViewModel.SetBetSelectedValue(@IHeadsAndTailsViewModel.GameChips.Chip9))">
                                <p class="Token">@IHeadsAndTailsViewModel.GameChips.Chip9Display</p>
                                <img src="/img/5k.png" />
