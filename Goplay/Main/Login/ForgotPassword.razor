@page "/ForgotPassword"

<div class="tab-pane" id="forgotPassPanel" role="tabpanel" aria-labelledby="forgotPassTab">
    <form class="signin-form">
        <p class="text-white font-16 mb-3">
            @((MarkupString)this.message)
        </p>
        <div class="form-group mb-3">
            <input id="mobileNumer" type="tel" hidden="@hideOptMobile" @bind-value="_forgotpasswordViewModel.MobileNumber" class="form-control" placeholder="09XX XXX XXXX" required>
            <input type="email" hidden="@hideOptEmail" @bind-value="_forgotpasswordViewModel.EmailAddress" class="form-control" placeholder="Email Address" required>
            <input type="number" hidden="@hideVerification" @bind-value="_forgotpasswordViewModel.Code" class="form-control" placeholder="Enter your OTP: XXXXXX" required>
            <span class="reqCode col btn text-right link-light btn" hidden="@hideVerification" onclick="@RequestNewCode">Request New Code</span>

            <input type="password" class="form-control mb-2" hidden="@hidePassword" @bind-value="_forgotpasswordViewModel.NewPassword" placeholder="New Password">
            <input type="password" class="form-control mb-2" hidden="@hidePassword" @bind-value="_forgotpasswordViewModel.ConfirmNewPassword" placeholder="Confirm New Password">

        </div>
        <div class="form-group pb-5">
            <button type="button" hidden="@hideOptMobile" onclick="@SubmitOTP" class="form-control btn btn-warning rounded submit px-3">Request OTP</button>
            <button type="button" hidden="@hideOptEmail" onclick="@SubmitCode" class="form-control btn btn-warning rounded submit px-3">Request OTP</button>
            <button class="form-control btn btn-warning rounded submit px-3" hidden="@hideVerification" onclick="@VerifyCode">Verify</button>
            <button type="button" class="form-control btn btn-warning rounded submit px-3" hidden="@hidePassword" onclick="@SubmitNewPassword">Submit</button>
            <button type="button" class="form-control btn btn-warning rounded submit px-3" hidden="@hideOptButton" onclick="@optEmail">Email Address</button>
            <button type="button" class="form-control btn btn-warning rounded submit px-3" hidden="@hideOptButton" onclick="@optMobile">Mobile Number</button>
        </div>
    </form>
</div>



