
<select id="Item" class="form-control-sm bg-white border" @bind="@Item">
    @foreach (var l in list)
    {
        @if (Item != null && String.Equals(l, Item,
       StringComparison.OrdinalIgnoreCase))
        {
            <option selected value="@l">@l</option>
        }
        else
        {
            <option value="@l">@l</option>
        }
    }
</select>


@code {
    public IEnumerable<string> list = new List<string>()
 {
    "MALE",
    "FEMALE"
 };


    private string item { get; set; }

    [Parameter]
    public string Item
    {
        get { return item; }
        set
        {
            if (item != value)
            {
                item = value;
                if (ItemChanged.HasDelegate)
                {
                    ItemChanged.InvokeAsync(value);
                }
            }
        }
    }

    [Parameter]
    public EventCallback<string> ItemChanged { get; set; }
 }