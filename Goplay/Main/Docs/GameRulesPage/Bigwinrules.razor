@page "/gamerules/bigwin"
@using GoplayasiaBlazor.Core.Global.Interface;
@using GoPlayAsiaWebApp.Goplay.Games.Shared;
@attribute [Authorize(Roles = "1")]
@inject ICurrentUser icurrentUser
@* <TopContent CreditsDisp="@icurrentUser.CreditsDisp" /> *@
<section>
    <main class="container pt-4 mt-5">
        <h5 class="font-weight-bold mt-2 text-white">BIGWIN HOUSE RULES</h5>
        <div class="">
            <div class="containerVid">
                <img class="responsive-iframe" src="/img/Bigwin-img.png">
            </div>
            <div class="container bg-white text-dark pb-2">
                <h4 class="pt-2">BIG WIN</h4>
                <p class="mt-2 ">
                    Big Win is a five canister drop ball game with all canisters having letters A-Z. One ball will be dropped into each of the canisters to rest on one particular letter. Players will bet on all five letters. All winning combinations should be in exact order.  Example: ABCDE
                </p>
                <h4 class="">Game Mechanic</h4>
                <ul>
                    <li>Game: Letters Game</li>
                    <li>Fixed Bet: Php20</li>
                    <li>Open Bet:  5mins</li>
                    <li>Lucky Pick: Players have the option to use computer generated numbers and amount to place their bets</li>
                    <li>
                        Grand Jackpot: Php25,000,000 (all five letters in exact order)
                    </li>
                    <li>Jackpot: Php1,000,000 (all 4 letters in exact order)</li>
                    <li>Consolation: Php200 (all 3 letters in exact order)</li>
                    <li>
                        Grand Jackpot and Jackpot prizes will be divided among all winners
                    </li>
                    <li>
                        Consolation Prize will be awarded individually to all winners
                    </li>
                    <li>
                        In case of no winner certain percentage will be added to the next draw
                    </li>
                </ul>
            </div>
            <div class="d-flex justify-content-center pb-5 mt-3">
                <a href="/games/gigadraw" class="btn gpa-btn">Back To Bigwin Game</a>
            </div>
        </div>

    </main>
</section>
