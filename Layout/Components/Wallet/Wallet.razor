@page "/Wallet"
<PageTitle>GoPlayAsia: User's Wallet</PageTitle>


<div class="container-fluid marketing pt-5">
    <div class="container p-3">
        <div class="row pt-4 bg-white mt-4 rounded-3 justify-content-center">

            <div class="container-fluid">
                <div class="col">
                    <a class="icon-link icon-link-hover text-decoration-none" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0);" href="#">
                        <svg class="bi" aria-hidden="true"><use xlink:href="#clipboard"></use></svg>
                        <span class="fw-bold h5">Cash-In</span>
                        <p><spa class="text-secondary">Receive / Add money</spa></p>
                    </a>
                </div>
                <div class="col">
                    <a class="icon-link icon-link-hover text-decoration-none" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0);" href="#">
                        <svg class="bi" aria-hidden="true"><use xlink:href="#clipboard"></use></svg>
                        <span class="fw-bold h5">Cash-Out</span>
                        <p><spa class="text-secondary">Send / Withdraw money</spa></p>
                    </a>
                </div>
                <div class="col">
                    <a class="icon-link icon-link-hover text-decoration-none" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0);" href="#">
                        <svg class="bi" aria-hidden="true"><use xlink:href="#clipboard"></use></svg>
                        Icon link
                    </a>
                </div>
            </div>

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Cash-In</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Select Payment Method</h6>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Dropdown button
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </div>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        </div>
    </div>
</div>